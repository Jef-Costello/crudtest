           url('/web/font/fontello.woff?35429099') format('woff'),
           url('/web/font/fontello.ttf?35429099') format('truetype'),
           url('/web/font/fontello.svg?35429099#fontello') format('svg');
      font-weight: normal;
      font-style: normal;
    }
