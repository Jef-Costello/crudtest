/*
  Variables
*/

blue = #125688
offwhite = #fafafa
lightgrey  = #EDEEED
lightgray = lightgrey // OH Canada!

html
  font-size 15px
  font-family Open Sans,sans-serif

p
  font-size 1.6rem
  line-height 1.5


h1
  font-family sans-serif
  text-align center
  font-weight 100
  font-size 3rem
  margin 2rem 0
  letter-spacing -1px
  text-shadow 0px 4px 0 rgba(18, 86, 136, 0.11)
  a
    color blue
    text-decoration none
    &:focus
      outline 0


// "Instagram-like" webfont
@font-face {
      font-family: 'fontello';
      src: url('/web/font/fontello.eot?35429099');
